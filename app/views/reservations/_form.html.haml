.row
  .small-3.columns
    = form_for @guest, :remote => true do |f|
      = f.label :name
      = f.text_field :name
      = f.label :phone
      = f.text_field :phone
    = form_for @reservation, :remote => true do |f|
      = f.label :party_size
      = f.text_field :party_size, :autofocus => true
      = f.label :date
      = f.text_field :date
      = f.label :est_wait
      = f.text_field :est_wait
      = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius alert')
      = f.submit 'Create Reservation', :id => 'create_reservayion_button', :class => 'button radius tiny'
  .small-9.columns
    %ol
  - @guests.each do |guest|
    %li
      %ul
        %form{:action => "/guests/sendtext", :method => "post"}
          %li= guest.name
          %li= guest.phone
          %input{:name => "first", :type => "hidden", :value => guest.name}
            %li
              %input{:name => "body", :type => "text"}/
            %li
              %button Send Text

