.row
  .small-3.columns
    = form_for @guest, :remote => true do |f|
      = f.label :name
      = f.text_field :name
      = f.label :phone
      = f.text_field :phone
    = form_for @reservation, :remote => true do |f|
      = f.label :party_size
      = f.text_field :party_size, :autofocus => true
      = f.label :date
      = f.text_field :date
      = f.label :est_wait
      = f.text_field :est_wait
      = f.label :act_wait
      = f.text_field :act_wait
      = button_to_function('Cancel', 'cancel_user_form()',:class => 'button radius tiny alert')
      = f.submit 'Create Reservation', :id => 'create_reservayion_button', :class => 'button radius tiny'
  .small-9.columns

