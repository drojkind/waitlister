.row.r_form
  .small-12.columns
    = form_for @reservation, :remote => true do |f|
      = f.label :name
      = f.text_field :name
      = f.label :phone
      = f.text_field :phone
      = f.label :party_size
      = f.text_field :party_size, :autofocus => true
      = f.label :date
      = f.text_field :date
      = f.label :est_wait
      = f.text_field :est_wait
      = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius alert')
      = f.submit 'Create Reservation', :id => 'create_reservation_button', :class => 'button radius tiny'
  .small-9.columns
    / %ol
    %table
      - @reservations.each do |reservation|
        / %tr{:id => "reservation_#{reservation.id}"}
        = content_tag_for(:tr, reservation) do
          =form_tag sendtext_reservation_path(reservation), :remote => true do
            %td
              = label_tag reservation.name
            %td
              = label_tag reservation.phone
            %td
              = label_tag reservation.est_wait
            / %input{:name => "first", :type => "hidden", :value => reservation.name}
            %td
              = hidden_field_tag('first', reservation.name)
            %td
              = hidden_field_tag('phone', reservation.phone)
            / %input{:name => "body", :type => "text"}
            %td
              = text_area_tag('body', nil, :rows => 3 )
            / %button{:id => 'textbutton'} Send Text
            %td
              = submit_tag('Send Text')